@model List<JogosViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Listagem de jogos</h2>

<a href="/jogos/create" class="btn btn-info">Novo Registro</a>
<br />

<table class="table table-responsive table-striped">
    <tr>
        <th>Ações</th>
        <th>Reserva</th>
        <th>Nome</th>
        <th>Valor da Locação</th>
        <th>CPU</th>
        <th>Data de Aquisição</th>
    </tr>
    @foreach (var jogo in Model)
    {
        <tr>
            <td>
                <a href="/jogos/edit?id=@jogo.Id" title="Editar">
                    <img src="/assets/Edit.png" alt="Editar" style="width:30px !important; height:30px !important;" />
                </a>
            </td>
            <td>@jogo.Id</td>
            <td>@jogo.Nome</td>
            <td>@jogo.Valor_Locacao?.ToString("0.00")</td>
            <td>@jogo.CPU_ID</td>
            <td>@jogo.Data_Aquisicao.ToShortDateString()</td>
        </tr>
    }
</table>