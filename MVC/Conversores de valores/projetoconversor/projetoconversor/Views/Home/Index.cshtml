@model projetosoma.Models.ResultadoViewModel

@{
    ViewData["Title"] = "Conversor de Medidas";
}

<h2>Conversor de Medidas</h2>

<form asp-action="ConverterMedida" method="post">
    <label for="valorMetros">Valor em Metros:</label>
    <input type="number" id="valorMetros" name="valorMetros" step="any" required />
    <br />

    <label for="unidade">Converter para:</label>
    <select id="unidade" name="unidade" required>
        <option value="centimetro">Centímetro</option>
        <option value="milimetro">Milímetro</option>
        <option value="quilometro">Quilômetro</option>
        <option value="pé">Pé</option>
        <option value="milha">Milha</option>
    </select>
    <br />

    <button type="submit">Converter</button>
</form>

@if (Model.Resultado != 0)
{
    <h3>Resultado: @Model.ValorMetros metros é igual a @Model.Resultado @Model.Unidade</h3>
}
