@{
    ViewData["Title"] = "Cálculo de Potência";
}

<h2>Cálculo de Potência</h2>

<form asp-action="CalculaPotencia" method="post">
    <label for="baseNum">Base:</label>
    <input type="number" id="baseNum" name="baseNum" step="any" required />
    <br />

    <label for="expoente">Expoente:</label>
    <input type="number" id="expoente" name="expoente" step="any" required />
    <br />

    <button type="submit">Calcular</button>
</form>

@if (ViewBag.Resultado != null)
{
    <h3>Resultado: @ViewBag.Resultado</h3>
}
